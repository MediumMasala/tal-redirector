# =============================================================================
# Tal Redirector - Environment Configuration
# =============================================================================
# Copy this file to .env and modify as needed

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_NAME=Tal Redirector
APP_VERSION=1.0.0

# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode (shows detailed errors)
DEBUG=false

# -----------------------------------------------------------------------------
# Server
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=8000

# Number of worker processes (for gunicorn in production)
WORKERS=4

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json (for production/log aggregation) or text (for development)
LOG_FORMAT=text

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# Allowed CORS origins (comma-separated, or * for all)
ALLOWED_ORIGINS=*

# Rate limiting (requests per window)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# -----------------------------------------------------------------------------
# WhatsApp Settings
# -----------------------------------------------------------------------------
# Default message if none provided
DEFAULT_WHATSAPP_MESSAGE=

# Phone number validation
PHONE_MIN_LENGTH=10
PHONE_MAX_LENGTH=15

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_METRICS=true
